{
  "name": "boilerplate-react",
  "homepage": "https://liamsimpson.co.nz",
  "type": "module",
  "version": "0.2.0",
  "description": "React!",
  "repository": "https://github.com/dev-academy-challenges/react-boilerplate.git",
  "main": "server/index.js",
  "scripts": {
    "build": "npm run build:client && npm run build:server && npm run build:css",
    "start": "node dist/server.js",

    "dev": "run-p dev:client dev:server tailwind:watch",
    "dev:client": "vite",
    "dev:server": "tsx watch server/index.ts",

    "build:css":"tailwindcss -i ./src/input.css -o ./src/output.css",
    "build:client": "vite build",
    "build:server": "esbuild --packages=external --platform=node --format=esm --outfile=dist/server.js --bundle server/index.ts",


    "tailwind:watch": "tailwindcss -i ./src/input.css -o ./src/output.css --watch",
    "test": "vitest",
    "lint": "eslint --ext .js,.jsx,.ts,.tsx .",
    "format": "prettier -w '**/*.{js,jsx,ts,tsx}'",
    "knex": "knex --knexfile ./server/db/knexfile.js"
  },
  "eslintConfig": {
    "extends": "@devacademy/eslint-config/react",
    "ignorePatterns": [
      "bundle.js"
    ]
  },
  "author": "Dev Academy Aotearoa",
  "license": "ISC",
  "devDependencies": {
    "@devacademy/eslint-config": "^1.10.1",
    "@tanstack/eslint-plugin-query": "^5.62.16",
    "@tanstack/react-query-devtools": "^5.64.1",
    "@types/express": "^5.0.0",
    "@types/multer": "^1.4.12",
    "@types/node": "^18.19.68",
    "@types/react": "^18.0.28",
    "@types/react-dom": "^18.0.11",
    "@types/superagent": "^8.1.9",
    "@vitejs/plugin-react": "^4.2.1",
    "esbuild": "^0.24.2",
    "eslint": "^8.56.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.2.5",
    "react": "^18.0.2",
    "react-dom": "^18.3.1",
    "react-router-dom": "^6.11.2",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vite": "^5.4.13",
    "vitest": "^1.2.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  },
  "browserslist": "> 2%, not dead",
  "dependencies": {
    "@auth0/auth0-react": "^2.3.0",
    "@radix-ui/react-label": "^2.1.1",
    "@radix-ui/react-slot": "^1.1.1",
    "@tanstack/react-query": "^5.64.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "express": "^4.21.2",
    "express-jwt": "^8.5.1",
    "express-oauth2-jwt-bearer": "^1.6.0",
    "jsonwebtoken": "^9.0.2",
    "jwks-rsa": "^3.1.0",
    "knex": "^3.1.0",
    "lucide-react": "^0.469.0",
    "multer": "^1.4.5-lts.1",
    "react-router": "^7.1.3",
    "sqlite3": "^5.1.7",
    "superagent": "^10.1.1",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  }
}
